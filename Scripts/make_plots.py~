from pylab import *

# Make the mel scale plot
f = arange(0., 20001., 1.)
m = 1125*log(1+f/700.0)
plot(f, m, linewidth=2.0, color='red')
#plot.axis(arange(0., 20000., 1000.))
axis([0,20000,0, 4000])

xlabel('Frequency (Hz)')
ylabel('Mel scale (mel)')
grid(True)
savefig('mel-scale.pdf', format='pdf')
#show()
